{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Decisions (ADRs)",
  "type": "object",
  "required": [
    "id",
    "date",
    "title",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "title": {
      "type": "string"
    },
    "context": {
      "type": "string"
    },
    "decision": {
      "type": "string"
    },
    "consequences": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "accepted",
        "rejected",
        "superseded"
      ]
    },
    "supersedes": {
      "type": "string"
    },
    "superseded_by": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
