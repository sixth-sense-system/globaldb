{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Evidence Ticket",
  "type": "object",
  "required": [
    "id",
    "kind",
    "confidence",
    "span",
    "text",
    "source",
    "created_at"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "enum": [
        "event",
        "idea",
        "config",
        "decision",
        "roadmap"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "span": {
      "type": "object",
      "properties": {
        "file": {
          "type": "string"
        },
        "start": {
          "type": "integer"
        },
        "end": {
          "type": "integer"
        }
      },
      "required": [
        "file",
        "start",
        "end"
      ]
    },
    "text": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
